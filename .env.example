# ============================================================
# TechManuals Store — Configuración de entorno (.env)
# Copiar este archivo como: .env (en la raíz del proyecto)
# NUNCA subir el .env real a Git
# ============================================================

# --- APP ---
CI_ENVIRONMENT = development        # development | production
app.baseURL = 'http://localhost:8080/'
app.sessionDriver = 'CodeIgniter\Session\Handlers\DatabaseHandler'
app.sessionCookieName = 'tm_session'
app.sessionExpiration = 7200
app.sessionSavePath = 'ci_sessions'
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300

# --- BASE DE DATOS ---
database.default.hostname = localhost
database.default.database = techmanuals_db
database.default.username = root
database.default.password = TU_PASSWORD_AQUI
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

# --- GOOGLE OAUTH ---
# Crear en: https://console.cloud.google.com → APIs & Services → Credentials
GOOGLE_CLIENT_ID     = TU_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET = TU_GOOGLE_CLIENT_SECRET
# URI autorizada de redirección (agregar en Google Console):
# http://localhost:8080/auth/google/callback

# --- FACEBOOK OAUTH ---
# Crear en: https://developers.facebook.com → My Apps → Create App
FACEBOOK_APP_ID     = TU_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET = TU_FACEBOOK_APP_SECRET
# URI de redirección (agregar en Facebook Developers → Facebook Login → Settings):
# http://localhost:8080/auth/facebook/callback

# --- PAYPAL ---
# Crear en: https://developer.paypal.com → My Apps & Credentials
PAYPAL_CLIENT_ID     = TU_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET = TU_PAYPAL_CLIENT_SECRET
PAYPAL_MODE          = sandbox    # sandbox | live
PAYPAL_CURRENCY      = USD

# --- EMAIL (para notificaciones de compra) ---
# Usar Gmail con contraseña de aplicación, o servicio como Mailtrap para pruebas
email.protocol  = smtp
email.SMTPHost  = smtp.gmail.com
email.SMTPPort  = 587
email.SMTPCrypto = tls
email.SMTPUser  = tu_email@gmail.com
email.SMTPPass  = TU_APP_PASSWORD_GMAIL
email.fromEmail = noreply@techmanuals.com
email.fromName  = TechManuals Store

# --- DESCARGA ---
# Cuántas horas son válidos los links de descarga
DOWNLOAD_LINK_HOURS = 24

# --- ENCRYPTION KEY (generar con: php spark key:generate) ---
encryption.key = hex2bin(TU_KEY_AQUI)
